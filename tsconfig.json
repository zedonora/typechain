{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES6",
        "baseUrl": "src",
        "noImplicitAny": true,
        "sourceMap": true,
        "moduleResolution": "Node",
        "outDir": "dist",
        "paths": {
            "*" : [
                "*",
                "src/*"
            ]
        },
        "allowJs": true,
    },
    "include": ["src/**/*"],
}